<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginTop="32dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@mipmap/ic_launcher" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView">

        <Button
            android:id="@+id/call_button"
            android:layout_width="140dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:background="@drawable/round_button"
            android:text="Calling"
            android:drawableStart="@drawable/ic_call_black_24dp"
            android:textColor="@android:color/white" />

        <Button
            android:id="@+id/messenger_button"
            android:layout_width="140dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:background="@drawable/round_button"
            android:text="Messenger"
            android:drawableStart="@drawable/ic_message_24dp"
            android:textColor="@android:color/white" />

        <Button
            android:id="@+id/video_call_button"
            android:layout_width="140dp"
            android:layout_height="wrap_content"
            android:background="@drawable/round_button"
            android:text="Call Video"
            android:drawableStart="@drawable/ic_videocam_24dp"
            android:textColor="@android:color/white" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/rate_button"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:tint="@color/send_msg"
            android:layout_marginEnd="20dp"
            android:background="@drawable/circle"
            app:srcCompat="@drawable/ic_star_black_24dp"/>

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/more_app_button"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:tint="@color/send_msg"
            android:background="@drawable/circle"
            app:srcCompat="@drawable/ic_apps_black_24dp"/>

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/share_button"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:tint="@color/send_msg"
            android:layout_marginStart="20dp"
            android:background="@drawable/circle"
            app:srcCompat="@drawable/ic_share_black_24dp"/>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>